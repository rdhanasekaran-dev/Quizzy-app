<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backker"
    tools:context=".puzzle.AnagramActivity">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2780742672110526/6821820498">
    </com.google.android.gms.ads.AdView>
    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:fontFamily="@font/amarante"
        android:textColor="#000000"
        android:text="Anagram"/>
    <TextView
        android:layout_marginTop="130dp"
        android:layout_alignParentRight="true"
       android:layout_marginRight="10dp"
        android:fontFamily="@font/amarante"
        android:id="@+id/totalcoinsHolder"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/round_white_back"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="1000"/>
    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:src="@drawable/coins"
        />
    <TextView
        android:id="@+id/coins_view"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:fontFamily="@font/amarante"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="0"
        />


        <TextView
            android:id="@+id/count_view"
            android:fontFamily="@font/amarante"
        android:layout_marginRight="5dp"
        android:layout_marginTop="80dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="word 1/10"
        />


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <Button
            android:onClick="showHint"
            android:id="@+id/hint"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yello_round_back"
            android:text="Hint"
            android:textStyle="bold"
            android:fontFamily="@font/amarante"
            android:textColor="#FFFFFF"
            android:layout_margin="20dp"
            />
        <Button
            android:onClick="skipWord"
            android:fontFamily="@font/amarante"
            android:id="@+id/skip"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yello_round_back"
            android:text="skip"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_margin="20dp"
            />
        <Button
            android:fontFamily="@font/amarante"
            android:onClick="edit"
            android:id="@+id/edit"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yello_round_back"
            android:text="X"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_margin="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/ans_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="180dp"
        android:padding="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="5dp"
            android:id="@+id/ansone"
            android:fontFamily="@font/amarante"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/round_white_back"
            />
        <TextView
            android:textStyle="bold"
            android:fontFamily="@font/amarante"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/ansone"
            android:id="@+id/anstwo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/round_white_back"
            />
        <TextView
            android:fontFamily="@font/amarante"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/anstwo"
            android:id="@+id/ansthree"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/round_white_back"
            />
        <TextView
            android:textColor="#000000"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/ansthree"
            android:id="@+id/ansfour"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:fontFamily="@font/amarante"
            android:background="@drawable/round_white_back"
            />
        <TextView
            android:textColor="#000000"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/ansfour"
            android:id="@+id/ansfive"
            android:textStyle="bold"
            android:layout_width="45dp"
            android:fontFamily="@font/amarante"
            android:layout_height="45dp"
            android:background="@drawable/round_white_back"
            />
        <TextView
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/ansfive"
            android:id="@+id/anssix"
            android:fontFamily="@font/amarante"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/round_white_back"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/ans_view"
        android:gravity="center"
        android:id="@+id/word_view"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:onClick="enterLetter"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="@font/amarante"
            android:gravity="center"
            android:layout_margin="5dp"
            android:id="@+id/wordone"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/round_white_back" />
        <TextView
            android:onClick="enterLetter"
            android:textColor="#000000"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/amarante"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/wordone"
            android:id="@+id/wordtwo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/round_white_back"
            />
        <TextView
            android:onClick="enterLetter"
            android:textStyle="bold"
            android:fontFamily="@font/amarante"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/wordtwo"
            android:id="@+id/wordthree"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/round_white_back"
            />
        <TextView
            android:onClick="enterLetter"
            android:textColor="#000000"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/amarante"
            android:layout_above="@id/wordtwo"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/wordone"
            android:id="@+id/wordfour"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/round_white_back"
            />
        <TextView
            android:onClick="enterLetter"
            android:textStyle="bold"
            android:fontFamily="@font/amarante"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_below="@id/wordtwo"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/wordone"
            android:id="@+id/wordfive"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/round_white_back"
            />
        <TextView
            android:onClick="enterLetter"
            android:textStyle="bold"
            android:fontFamily="@font/amarante"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_above="@id/wordfour"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/wordone"
            android:id="@+id/wordsix"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/round_white_back"
            />
    </RelativeLayout>
</RelativeLayout>