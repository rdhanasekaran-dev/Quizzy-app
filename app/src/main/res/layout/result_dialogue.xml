<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="380dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"
    android:layout_gravity="center">
    <RelativeLayout
        android:background="@drawable/round_white_back"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:fontFamily="@font/amarante"
            android:layout_marginTop="10dp"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Level Completed"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <ImageView
            android:layout_below="@id/title"
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/treasure_chest"/>
        <TextView
            android:fontFamily="@font/amarante"
            android:id="@+id/coinsReceived"
            android:layout_below="@id/img"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="Coins Received"
            android:gravity="center_vertical"
            android:textAlignment="textEnd"
            android:paddingRight="0dp"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:ignore="RtlCompat" />
        <TextView
            android:fontFamily="@font/amarante"
            android:layout_below="@id/img"
            android:layout_toRightOf="@id/coinsReceived"
            android:id="@+id/coinsReceivedView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="0"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="18sp"/>
        <TextView
            android:fontFamily="@font/amarante"
            android:layout_below="@id/coinsReceivedView"
            android:id="@+id/totalCoins"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:textAlignment="textEnd"
            android:paddingRight="0dp"
            android:text="Total Coins"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:ignore="RtlCompat" />
        <TextView
            android:fontFamily="@font/amarante"
            android:paddingLeft="20dp"
            android:layout_toRightOf="@id/totalCoins"
            android:layout_below="@id/coinsReceivedView"
            android:id="@+id/totalCoinsView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="0"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="18sp"/>
    </RelativeLayout>

</RelativeLayout>