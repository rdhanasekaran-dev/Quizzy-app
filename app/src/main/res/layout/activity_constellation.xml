<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backker"
    tools:context=".puzzle.ConstellationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="@string/tiletap"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="22sp"
                android:fontFamily="@font/amarante"
                />
            <ImageView
                android:layout_marginTop="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="55dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_action_correct"/>
        <ImageView
            android:layout_marginTop="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_action_wrong"/>

            <TextView
                android:id="@+id/right"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@drawable/round_white_back"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="30dp"
                android:text="0"
                android:fontFamily="@font/amarante"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#000000"/>
        <TextView
            android:id="@+id/wrong"
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/round_white_back"
            android:layout_marginTop="90dp"
            android:layout_marginRight="30dp"
            android:text="0"
            android:fontFamily="@font/amarante"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000000"/>



    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="350dp">
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:orientation="vertical"
            android:id="@+id/ll1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp" />
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:layout_toRightOf="@id/ll1"
            android:orientation="vertical"
            android:id="@+id/ll2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:layout_toRightOf="@id/ll2"
            android:orientation="vertical"
            android:id="@+id/ll3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:layout_toRightOf="@id/ll3"
            android:orientation="vertical"
            android:id="@+id/ll4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:layout_below="@id/ll1"
            android:orientation="vertical"
            android:id="@+id/ll5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:layout_toRightOf="@id/ll5"
            android:layout_below="@id/ll2"
            android:orientation="vertical"
            android:id="@+id/ll6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:layout_below="@id/ll3"
            android:layout_toRightOf="@id/ll6"
            android:orientation="vertical"
            android:id="@+id/ll7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:layout_below="@id/ll4"
            android:layout_toRightOf="@id/ll7"
            android:orientation="vertical"
            android:id="@+id/ll8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:layout_below="@id/ll5"
            android:orientation="vertical"
            android:id="@+id/ll9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:layout_below="@id/ll6"
            android:layout_toRightOf="@id/ll5"
            android:orientation="vertical"
            android:id="@+id/ll10"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:layout_below="@id/ll7"
            android:layout_toRightOf="@id/ll6"
            android:orientation="vertical"
            android:id="@+id/ll11"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:layout_below="@id/ll8"
            android:layout_toRightOf="@id/ll7"
            android:orientation="vertical"
            android:id="@+id/ll12"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:layout_below="@id/ll9"
            android:orientation="vertical"
            android:id="@+id/ll13"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:layout_below="@id/ll10"
            android:layout_toRightOf="@id/ll13"
            android:orientation="vertical"
            android:id="@+id/ll14"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:layout_below="@id/ll11"
            android:layout_toRightOf="@id/ll14"
            android:orientation="vertical"
            android:id="@+id/ll15"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:onClick="click"
            android:background="@drawable/round_white_back"
            android:layout_below="@id/ll12"
            android:layout_toRightOf="@id/ll15"
            android:orientation="vertical"
            android:id="@+id/ll16"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />
    </RelativeLayout>
    <Button
        android:onClick="start"
        android:id="@+id/start"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/green_round_back"
        android:text="@string/start"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="@font/amarante"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2780742672110526/6821820498">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>