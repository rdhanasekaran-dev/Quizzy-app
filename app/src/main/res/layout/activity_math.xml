<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backker"
    tools:context=".puzzle.MathActivity">

    <TextView
        android:fontFamily="@font/amarante"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#000000"
        android:text="@string/mathpuzzle"/>
    <TextView
        android:fontFamily="@font/amarante"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:id="@+id/totalcoinsHolder"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/round_white_back"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="1000"/>
    <ImageView
        android:fontFamily="@font/amarante"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:src="@drawable/coins"
        />
    <TextView
        android:fontFamily="@font/amarante"
        android:id="@+id/coins_view"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="0"
        />
    <ImageView
        android:visibility="gone"
        android:background="#55555555"
        android:id="@+id/correct"
        android:layout_centerInParent="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/questionView"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_action_correct"
        />
    <ImageView
        android:fontFamily="@font/amarante"
        android:visibility="gone"
        android:background="#55555555"
        android:id="@+id/wrong"
        android:layout_centerInParent="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/questionView"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_action_wrong"
        />
    <TextView
        android:fontFamily="@font/amarante"
        android:id="@+id/count_view"
        android:layout_marginRight="5dp"
        android:layout_marginTop="80dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="1/20"
        />
    <TextView
        android:fontFamily="@font/amarante"
        android:id="@+id/level_view"
        android:layout_marginRight="5dp"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Level 1"
        />
    <TextView
        android:id="@+id/questionView"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/rlb"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:background="@drawable/round_white_back"
        android:textColor="#000000"
        android:textSize="22sp"
        android:fontFamily="@font/amarante"/>

    <RelativeLayout
        android:id="@+id/rlb"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <RelativeLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_above="@id/b1"
                android:id="@+id/answerEnterView"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:paddingRight="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/fbback"
                android:text=""
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:fontFamily="@font/amarante"
                />
            <ImageView
                android:onClick="erase"
                android:id="@+id/erase"
                android:layout_marginBottom="20dp"
                android:layout_above="@id/b1"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/answerEnterView"
                android:layout_marginLeft="-55dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_action_wrong"/>
            <ImageView
                android:layout_marginBottom="20dp"
                android:layout_above="@id/b1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/answerEnterView"
                android:id="@+id/hint"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fbback"
                android:src="@drawable/hint"/>
            <TextView
                android:onClick="checkAnswer"
                android:layout_above="@id/b1"
                android:layout_toRightOf="@id/hint"
                android:id="@+id/enter"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/fbback"
                android:gravity="center"
                android:text="@string/enter"
                android:textColor="#000000"
                android:textSize="20sp"
                android:fontFamily="@font/amarante"
                />
        <Button
            android:onClick="type"
            android:id="@+id/b1"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fbback"
            android:gravity="center"
            android:text="1"
            android:textSize="20sp"
            android:fontFamily="@font/amarante"
            />
        <Button
            android:onClick="type"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/b1"
            android:id="@+id/b2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fbback"
            android:gravity="center"
            android:text="2"
            android:textSize="20sp"
            android:fontFamily="@font/amarante"
            />
        <Button
            android:onClick="type"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/b2"
            android:id="@+id/b3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fbback"
            android:gravity="center"
            android:text="3"
            android:textSize="20sp"
            android:fontFamily="@font/amarante"
            />
        <Button
            android:onClick="type"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/b3"
            android:id="@+id/b4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fbback"
            android:gravity="center"
            android:text="4"
            android:textSize="20sp"
            android:fontFamily="@font/amarante"
            />
        <Button
            android:onClick="type"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/b4"
            android:id="@+id/b5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fbback"
            android:gravity="center"
            android:text="5"
            android:textSize="20sp"
            android:fontFamily="@font/amarante"
            />
        <Button
            android:onClick="type"
            android:layout_margin="10dp"
            android:layout_below="@id/b1"
            android:id="@+id/b6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fbback"
            android:gravity="center"
            android:text="6"
            android:textSize="20sp"
            android:fontFamily="@font/amarante"
            />
        <Button
            android:onClick="type"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/b1"
            android:layout_below="@id/b2"
            android:id="@+id/b7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fbback"
            android:gravity="center"
            android:text="7"
            android:textSize="20sp"
            android:fontFamily="@font/amarante"
            />
        <Button
            android:onClick="type"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/b7"
            android:layout_below="@id/b3"
            android:id="@+id/b8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fbback"
            android:gravity="center"
            android:text="8"
            android:textSize="20sp"
            android:fontFamily="@font/amarante"
            />
        <Button
            android:onClick="type"
            android:layout_margin="10dp"
            android:layout_below="@id/b4"
            android:layout_toRightOf="@id/b8"
            android:id="@+id/b9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fbback"
            android:gravity="center"
            android:text="9"
            android:textSize="20sp"
            android:fontFamily="@font/amarante"
            />
        <Button
            android:onClick="type"
            android:layout_margin="10dp"
            android:layout_below="@id/b5"
            android:layout_toRightOf="@id/b9"
            android:id="@+id/b10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fbback"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:fontFamily="@font/amarante"
            />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>